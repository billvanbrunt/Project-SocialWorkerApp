@using MC.MvcQuickNav
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Social Workers' Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body >

        <div class="siteJumbotron" style="text-align:center;">
            <img src="~/images/logoarea1.jpg"  />
        </div>
        

        <div class="container body-content" style="text-align:center;" >
            <div style="text-align:left;">
                <nav class="NavMenu">
                    @Html.NavigationMenu()
                </nav>
            </div>
             @RenderBody()
            <hr />
            <footer style="text-align:left;">
                <p>&copy; @DateTime.Now.Year - Guilford County Schools Social Workers' Application</p>
            </footer>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>
    </body>
</html>
